<div class="page-header">
  <h1>Jobs for your <span><%= @resume.resume_name %></span> Resume</h1>
</div>
<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'Create a new Job', new_resume_job_path, class:"btn" %>
  </div>
  <div class="btn-group">
    <%= link_to 'Resume List', resume_path(@resume), class:"btn" %>  
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Company</th>
      <th>Title</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @resume.jobs.each do |job|  %>
    <tr>
      <td><%= job.company  %></td>
      <td><%= job.title  %></td>
      <td><%= job.description %></td>
      <td><%= job.start_date %></td>
      <td><%= job.end_date %></td>
      <td><%= link_to 'Show', resume_job_path(@resume,job) %></td>
      <td><%= link_to 'Edit', edit_resume_job_path(@resume,job) %></td>
      <td><%= link_to 'Destroy', resume_job_path(@resume, job), method: :delete, 
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
  </tfoot>
</table>