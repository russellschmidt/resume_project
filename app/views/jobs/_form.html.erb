<%= form_for [@resume, @job], html: {class:"form-horizontal"} do |form| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <p><%= @job.errors.all %></p>
    </div>
  <% end %>

  <div class="field control-group">
    <%= form.label :company, class:"control-label" %><br />
    <div class="controls"><%= form.text_field :company %></div>
  </div>
  <div class="field control-group">
    <%= form.label :title, class:"control-label" %><br />
    <div class="controls"><%= form.text_field :title %></div>
  </div>
  <div class="field control-group">
    <%= form.label :description, class:"control-label" %><br />
    <div class="controls"><%= form.text_area :description, rows:"6" %></div>
  </div>
  <div class="field control-group">
    <%= form.label :start_date, class:"control-label" %><br />
    <div class="controls"><%= form.date_select :start_date %></div>
  </div>
  <div class="field control-group">
    <%= form.label :end_date, class:"control-label" %><br />
    <div class="controls"><%= form.date_select :end_date %></div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>