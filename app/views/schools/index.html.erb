<div class="page-header">
  <h1>Schools List for <span><%= @resume.resume_name %></span></h1>
</div>

<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'Create a new School', new_resume_school_path, class:"btn" %>
  </div>
  <div class="btn-group">
    <%= link_to 'Back to Resume', resume_path(@resume), class:"btn" %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>School</th>
      <th>Degree</th>
      <th>Major</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @resume.schools.each do |school|  %>
    <tr>
      <td><%= school.school_name  %></td>
      <td><%= school.degree  %></td>
      <td><%= school.major  %></td>
      <td><%= school.description %></td>
      <td><%= school.start_date %></td>
      <td><%= school.end_date %></td>
      <td><%= link_to 'Show', resume_school_path(@resume,school) %></td>
      <td><%= link_to 'Edit', edit_resume_school_path(@resume,school) %></td>
      <td><%= link_to 'Destroy', resume_school_path(@resume, school), method: :delete, 
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
  </tfoot>
</table>
