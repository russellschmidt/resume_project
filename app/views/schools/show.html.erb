<div class="page-header">
  <h1>Inspect a School</h1>
</div>
<p>Account: <%= current_user.email %></p>
<p>Resume: <%= @resume.resume_name %></p>

<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'School List', resume_schools_path, class:"btn" %>
    <%= link_to 'Create a new School', new_resume_school_path, class:"btn" %>
  </div>
  <div class="btn-group">
    <%= link_to 'Back to Resume', resume_path(@resume), class:"btn" %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>School</dt>
  <dd><%= @school.school_name %></dd>
  <dt>Degree</dt>
  <dd><%= @school.degree %></dd>
  <dt>Major</dt>
  <dd><%= @school.major %></dd>
  <dt>Description</dt>
  <dd><%= @school.description %></dd>
  <dt>Start Date</dt>
  <dd><%= @school.start_date %></dd>
  <dt>End Date</dt>
  <dd><%= @school.end_date %></dd>
</dl>

<%= render 'signout' %>