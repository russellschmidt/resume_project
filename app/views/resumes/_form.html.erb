<%= form_for [@resume], html: {class:"form-horizontal"} do |form| %>
  <% if @resume.errors.any? %>
    <div id="error_explanation">
      <p><%= @resume.errors.all %></p>
    </div>
  <% end %>

  <div class="field control-group">
    <%= form.label :resume_name, class:"control-label" %><br />
    <div class="controls"><%= form.text_field :resume_name %></div>
  </div>
  <div class="field control-group">
    <%= form.label :position, class:"control-label" %><br />
    <div class="controls"><%= form.text_field :position %></div>
  </div>
  <div class="field control-group">
    <%= form.label :description, class:"control-label" %><br />
    <div class="controls"><%= form.text_area :description, rows:"6" %></div>
  </div>
  <div class="actions control-group">
    <%= form.submit %>
  </div>
<% end %>